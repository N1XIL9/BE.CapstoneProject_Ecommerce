@model CapstoneProject_Ecommerce.Models.DETTAGLIO

@{
    ViewBag.Title = "Edit";
}

<h2>MODIFICA ORDINE</h2>

<div class="container" id="ContEdit">

    <div>
        @Html.ActionLink("CARRELLO", "Carrello", "DETTAGLIO")
    </div>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ContEditBox">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdDettaglio)
            @Html.HiddenFor(model => model.IdProdotto)

            <div class="form-group">
                @Html.LabelFor(model => model.IdTaglia, "IdTaglia", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("IdTaglia", null, htmlAttributes: new { @class = "form-control", @style = " width:100%" })
                    @Html.ValidationMessageFor(model => model.IdTaglia, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Quantita, new { htmlAttributes = new { @class = "form-control" , @style = " width:100%" } })
                    @Html.ValidationMessageFor(model => model.Quantita, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center mt-5" id="contBtn" style="width: 100%">
                    <input type="submit" value="SALVA" class="btn btn-default" />
                </div>
            </div>
    }


</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
