@model IEnumerable<CapstoneProject_Ecommerce.Models.DETTAGLIO>

@{
    ViewBag.Title = "Details";
}

@*<h2>DETTAGLIO ORDINE </h2>*@

<div class="container mt-5" id="ContAll">

    <div>
        @Html.ActionLink("TORNA AGLI ORDINI", "OrdineConfermato", "ORDINE")
    </div>
    <hr />
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ORDINE.IdOrdine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODOTTO.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODOTTO.NomeProdotto)
