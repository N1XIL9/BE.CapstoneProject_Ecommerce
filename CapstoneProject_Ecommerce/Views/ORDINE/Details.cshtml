                <td>
                    <img src="~/Content/img/@Html.DisplayFor(modelItem => item.PRODOTTO.Foto)" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODOTTO.NomeProdotto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TAGLIE.TagliaProdotto)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.USER.Username)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrezzoTotale)
