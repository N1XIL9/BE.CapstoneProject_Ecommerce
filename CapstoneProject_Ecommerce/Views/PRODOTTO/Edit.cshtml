@model CapstoneProject_Ecommerce.Models.PRODOTTO

@{
    ViewBag.Title = "Edit";
}

<h2>Modifica prodotto</h2>

<div class="container" id="ContEdit">
    <div>
        @Html.ActionLink("Ritorna ai prodotti", "ListaAdmin")
    </div>

            <hr />
    @using (Html.BeginForm("Edit", "PRODOTTO", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ContEditBox">
          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdProdotto)

            <div class="form-group">
                @Html.LabelFor(model => model.NomeProdotto, htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeProdotto, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @Html.ValidationMessageFor(model => model.NomeProdotto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label userName " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @{Html.EnableClientValidation(false);}
                    @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @{Html.EnableClientValidation(true);}
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("File", null, new { @class = "form-control", @type = "File", @style = " width:100%" })
                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center mt-5" id="contBtn" style="width: 100%">
                    <input type="submit" value="Salva" class="btn btn-default" />
                </div>
            </div>
    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
