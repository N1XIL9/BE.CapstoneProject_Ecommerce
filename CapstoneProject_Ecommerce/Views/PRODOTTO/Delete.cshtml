@model CapstoneProject_Ecommerce.Models.PRODOTTO

@{
    ViewBag.Title = "Delete";
}

<h2>Elimina prodotto</h2>

<div class="container" id="ContEdit">

                @Html.ActionLink("Lista articoli", "ListaAdmin")
        <hr />
    <h3 class="mx-4">Sei sicuro di voler eliminare questo articolo?</h3>
    <div class="mt-2">
        
        <dl class="dl-horizontal">
            <dt class="mx-4">
                @Html.DisplayNameFor(model => model.NomeProdotto)
            </dt>

            <dd class="mx-4">
                @Html.DisplayFor(model => model.NomeProdotto)
            </dd>

            <dt class="mx-4">
                @Html.DisplayNameFor(model => model.Descrizione)
            </dt>

            <dd class="mx-4">
                @Html.DisplayFor(model => model.Descrizione)
            </dd>

            <dt class="mx-4">
                @Html.DisplayNameFor(model => model.Prezzo)
            </dt>

            <dd class="mx-4">
                @Html.DisplayFor(model => model.Prezzo)
            </dd>

            <dt class="mx-4">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>

            <dd class="mx-4">
                @Html.DisplayFor(model => model.Foto)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center" id="contBtn" style="width: 100%">
                <input type="submit" value="Elimina" class="btn btn-default" />
            </div>
        }
    </div>
</div>