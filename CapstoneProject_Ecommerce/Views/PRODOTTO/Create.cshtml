@model CapstoneProject_Ecommerce.Models.PRODOTTO

@{
    ViewBag.Title = "Create";
}

<h2>CREA PRODOTTO</h2>

<div class="container" id="ContEdit">

    <div>
        @Html.ActionLink("Prodotti", "ListaAdmin")
    </div>
            <hr />
    @using (Html.BeginForm("Create", "PRODOTTO", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ContEditBox2 p-2">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NomeProdotto, htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeProdotto, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @Html.ValidationMessageFor(model => model.NomeProdotto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label  userName" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @{Html.EnableClientValidation(false);}
                    @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control", @style = " width:100%" } })
                    @{Html.EnableClientValidation(true);}

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Quantità Taglia S", htmlAttributes: new { @class = "control-label  userName" })
                <div class="col-md-10">
                    @Html.Editor("Quantità", new { htmlAttributes = new { @class = "form-control", @type = "number", @style = " width:100%" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Quantità Taglia M ", htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @Html.Editor("QuantitàM", new { htmlAttributes = new { @class = "form-control", @type = "number", @style = " width:100%" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Quantità Taglia L", htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @Html.Editor("QuantitàL", new { htmlAttributes = new { @class = "form-control", @type = "number", @style = " width:100%" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label userName" })
                <div class="col-md-10">
                    @Html.TextBox("File", null, new { @class = "form-control", @type = "File", @style = " width:100%" })
                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center mt-5" id="contBtn" style="width: 100%">
                    <input type="submit" value="Crea" class="btn btn-default" />
                </div>
            </div>
    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
